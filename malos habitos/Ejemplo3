# Función para calcular el área de un rectangulo
def a_rectangulo(base, altura):
    area = base * altura
    return area

# Función para calcular el área de un triangulo
def a_triangulo(base, altura):

    area = 0.5 * base * altura
    return area


# Función principal
def main():
    baserectangulo = 5
    alturarectangulo = 7
    cal_arearectangulo = a_rectangulo(baserectangulo, alturarectangulo)
    print("Área del rectángulo:", cal_arearectangulo)

    basetriangulo = 4
    alturatriangulo = 5
    cal_areatriangulo = a_triangulo(basetriangulo, alturatriangulo)
    print("Área del triángulo:", cal_areatriangulo)

main()
